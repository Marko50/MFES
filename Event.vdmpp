	private name : String;
	private date : Date;
	private id : nat;
	private capacity : nat;
	private tickets : set of Ticket := {};
	static count : nat := 0;
operations
-- TODO Define operations here
	public Event : String * nat * Date ==> Event
	Event(n, c, d) == (
		name := n; 
		capacity := c; 
		id := count; 
		count := count + 1; 
		date := d; 
		return self
	)
	pre count >= 0
	post name = n and capacity = c and tickets = {};
	
	public addTicket : Ticket ==> ()
	addTicket(t) == (
		tickets := tickets union {t};
		capacity := capacity - 1;
	)
	pre card tickets < capacity
	post tickets = tickets~ union {t};	
	
